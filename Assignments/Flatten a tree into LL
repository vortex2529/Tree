
class Solution {
public:
    vector<int> preorderTraversal(TreeNode* root) {
        vector<int> ans;
        TreeNode* curr = root;
        while(curr){
            
            if(!curr->left){
                ans.push_back(curr->val);
                curr = curr->right;
            }
            else{
                // find predecessor
                TreeNode* pred = curr->left;
                while(pred->right != curr && pred->right){
                    pred = pred -> right;
                }

                if(!pred->right){
                    ans.push_back(curr->val);
                    pred->right = curr;
                    curr = curr->left;
                }
                else{
                    pred->right = nullptr;
                    curr = curr->right;
                }
            }
        }
        return ans;
    }
};
